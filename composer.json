{
    "name": "lightsaml/lightsaml",
    "license": "MIT",
    "type": "library",
    "description": "Light SAML2 php library",
    "autoload": {
        "psr-0": { "LightSaml\\": "src/" }
    },
    "require": {
        "php": ">=5.5.1",
        "robrichards/xmlseclibs": "1.3.2",
        "symfony/console": "~2.3",
        "symfony/http-foundation": "~2.3",
        "symfony/event-dispatcher": "~2.3",
        "pimple/pimple": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "codeclimate/php-test-reporter": "v0.1.2",
        "monolog/monolog": "~1.3",
        "squizlabs/php_codesniffer": "~2.0"
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "post-update-cmd": [
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": ["app/lightsaml"],
    "prefer-stable": true,
    "minimum-stability": "stable"
}
